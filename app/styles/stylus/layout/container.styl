.grid
    width 100%
    margin 0 auto
    position absolute
    pointer-events none
    left 50%
    transform translateX(-50%)
    display none

.baseline
    width 100%
    height 100%
    position absolute
    bottom 0
    pointer-events none
    display none

.container
    height 100vh
    display grid

    grid-template-columns repeat(2, 1fr) repeat(4, minmax(64px, 1fr)) repeat(4, minmax(100px, 1fr)) repeat(2, 1fr)
    grid-template-rows 64px 1fr minmax(240px, auto) 1fr 80px 1fr
    grid-column-gap 20px
    grid-row-gap 40px

    animation-duration 1s

    opacity 0

@keyframes containerEnter {
    from {
        opacity 0
    }
    to {
        opacity 1
    }
}