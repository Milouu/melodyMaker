.content
    display grid
    grid-template-columns repeat(4, 1fr) repeat(4, minmax(32px, 1fr)) repeat(2, 1fr)
    // grid-template-columns repeat(4, minmax(64px, 1fr)) repeat(4, minmax(100px, 1fr))
    grid-column-gap 20px

    grid-column-start 3
    grid-row-start 3
    align-items center

    @media screen and (min-width: $desktop-large)
        grid-column-start 4
