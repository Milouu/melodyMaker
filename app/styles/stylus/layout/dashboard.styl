.dashboard__container
    width 100%
    height calc(100vh - 104px)
    min-height 500px
    padding-bottom 50px

.dashboard
    height 100%
    min-width 600px
    margin-left 100px
    margin-right 100px
    position relative

    box-shadow 0px 10px 30px 0px rgba(0, 0, 0, 0.06)

    transform-origin top left
    overflow hidden

.dashboard__content
    height 100%
    width 100%
    padding-left 20px
    padding-right 20px
    padding-top 20px
    background-color $white