.drum
    // position absolute
    width 16vw
    height 16vw
    min-width 150px
    min-height 150px
    left 0px
    bottom 50px
    display flex
    justify-content center
    align-items center

    transform rotate(0deg) translateX(-120%) translateY(50%)

    background linear-gradient(#F38A9D, #E35264)    

    box-shadow 0px 2px 80px 0px rgba(227, 82, 100, 0.20), 0px 10px 10px 0px rgba(0, 0, 0, 0.06)

    grid-row-start 4

    transition transform 1s ease

.drum__icon
    width 70%
    