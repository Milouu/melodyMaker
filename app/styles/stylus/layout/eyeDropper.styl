.eyeDropper
    width 72px
    height 72px
    overflow visible

    display flex
    align-items center
    justify-content center
    // border 11px solid #ffffff

    border-radius 50%

    // box-shadow 0px 0px 1px 0px rgba(74, 74, 74, 1)

    position absolute
    left 0
    top 0

    // opacity 0

    pointer-events none
    // transform translate(-50%, -50%)


.eyeDropper__coloredRing
    width 58px
    height 58px

    display flex
    align-items center
    justify-content center

    position absolute
    border 7px solid $green
    border-radius 50%


.eyeDropper__greyRing
    width 72px
    height 72px

    display flex
    align-items center
    justify-content center

    position absolute
    border 7px solid $black
    border-radius 50%

    opacity 0

    // transform-origin top
    transform scale(8)

    transition opacity 150ms ease, transform 150ms ease

.eyeDropper__square
    width 8px
    height 8px

    // box-shadow 0px 0px 1px 0px rgba(74, 74, 74, 1)

    background-color $green

    pointer-events none