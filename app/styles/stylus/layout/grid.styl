.grid
    width 100%
    margin 0 auto
    position absolute
    pointer-events none
    left 50%
    transform translateX(-50%)

.baseline
    width 100%
    height 100%
    position absolute
    bottom 0
    pointer-events none

.test
    height 66px
    background-color orange

.container
    display grid
    grid-template-columns repeat(12, 1fr)
    grid-gap 20px

