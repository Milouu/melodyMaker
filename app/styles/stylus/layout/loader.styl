.loader
    position absolute
    left 50%
    top 50%
    transform  translateX(-50%) translateY(-50%) rotate(0deg)
    border 2px solid $blue

    width 100px
    height 100px

    animation-name loader
    animation-duration 2s
    animation-timing-function ease
    animation-iteration-count infinite

    transition 500ms opacity ease, 500ms visibility ease

.loader::before
    content ''
    position absolute
    left 50%
    top 50%
    transform  translateX(-50%) translateY(-50%)
    background-color $white
    width 100px
    height 60px
    z-index -1

.loader::after
    content ''
    position absolute
    left 50%
    top 50%
    transform  translateX(-50%) translateY(-50%)
    background-color $white
    width 60px
    height 100px
    z-index -1

.loader__block
    width 80px
    height 80px

    position absolute
    left 50%
    top 50%
    transform  translateX(-50%) translateY(-50%)

    background-color $red

    animation-name loaderColors
    animation-duration 4s
    animation-timing-function ease
    animation-iteration-count infinite

@keyframes loader {
    0% {
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(1)
        // background-color $blue
        // border-top 16px solid $blue
    }
    25% {
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(0.8)
        // background-color $red
        // border-top 16px solid $red
    }
    50% {
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(1.1)
        // background-color $red
        // border-top 16px solid $red
    }
    75% {
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(0.6)
        // background-color $red
        // border-top 16px solid $red
    }
    100% {
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(1)
        // background-color $red
        // border-top 16px solid $red
    }
}

@keyframes loaderColors {
    0% {
        background-color $blue
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(1)
    }
    25% {
        background-color $red
        transform translateX(-50%) translateY(-50%) rotate(360deg) scale(0.8)
    }
    50% {
        background-color $green
        transform translateX(-50%) translateY(-50%) rotate(720deg) scale(1.1)
    }
    75% {
        background-color $yellow
        transform translateX(-50%) translateY(-50%) rotate(1080deg) scale(0.6)
    }
    100% {
        background-color $blue
        transform translateX(-50%) translateY(-50%) rotate(1440deg) scale(1)
    }
}