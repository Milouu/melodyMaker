@keyframes loaderColors {
    0% {
        // background-color $blue
        transform translateX(-50%) translateY(-50%) rotate(0deg) scale(1)
    }
    25% {
        // background-color $red
        transform translateX(-50%) translateY(-50%) rotate(360deg) scale(0.8)
    }
    50% {
        // background-color $green
        transform translateX(-50%) translateY(-50%) rotate(720deg) scale(1.1)
    }
    75% {
        // background-color $yellow
        transform translateX(-50%) translateY(-50%) rotate(1080deg) scale(0.6)
    }
    100% {
        // background-color $blue
        transform translateX(-50%) translateY(-50%) rotate(1440deg) scale(1)
    }
}

@keyframes loaderTxt {
    0% {
        content 'Play'
    }
    25% {
        content 'With'
    }
    50% {
        content 'Your'
    }
    75% {
        content 'Movement'
    }
    100% {
        content 'Play'
    }
}

.loader
    width 100px
    height 100px
    position absolute

    display flex
    align-items end

    left 50%
    top 50%
    transform  translateX(-50%) translateY(-50%) rotate(0deg)

.loader__box
    width 100px
    height 100px
    position absolute

    background-color $blue

    left 50%
    top 50%
    transform  translateX(-50%) translateY(-50%) rotate(0deg)

    animation-name loaderColors
    animation-duration 4s
    animation-timing-function ease
    animation-iteration-count infinite
    // font-family 'aileron'

    color $white

