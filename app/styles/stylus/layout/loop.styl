.loop  
    position absolute
    width 220px
    height 220px
    right 30px
    bottom 60px
    display flex
    justify-content center
    align-items center

    border-radius 100%

    background linear-gradient(#FBD249, #F5A623)    
    // transform rotate(0deg) translateX(50%) translateY(-100%)
    transform rotate(0deg) translateX(120%) translateY(50%)
    
    z-index -1
    box-shadow 0px 2px 80px 0px rgba(245, 166, 35, 0.20), 0px 10px 10px 0px rgba(0, 0, 0, 0.06)

    animation-duration 1s

.loop__arrows
    position relative
    width 100%
    height 100%

.loop__use
    transform scale(0.8) translateX(22%) translateY(28%)


@keyframes loopEnter {
    from {
        transform rotate(0deg) translateX(120%) translateY(50%)
    }
    to {
        transform rotate(-20deg) translateX(0%) translateY(0%)
    }
}