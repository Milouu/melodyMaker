.explanations
  grid-column-start 4
  grid-row-start 3
  background #ffffff
  color $black
  box-shadow 0px 10px 30px 0px rgba(0, 0, 0, 0.06)

  @media screen and (max-width: $tablet-landscape)
    grid-column-start 3

.explanations__bar
  width 100%
  height 8px
  background-color rgba(35, 228, 132, 0.3)

.explanations__fillBar
  height 8px
  background-color $green
  transform-origin left
  transition transform 0.3s ease
  will-change transform

.explanations__content
  height 100%
  padding 20px
  padding-top 10px
  padding-bottom 30px
  position relative
  display flex
  flex-direction column
  justify-content space-between
  // align-items around

.explanations__title
  font-family 'aileron'
  font-size 26px
  font-weight bold
  padding-bottom 20px

  @media screen and (min-width: $desktop-large)
    font-size 36px
  @media screen and (max-width: $tablet-landscape)
    font-size 18px


.explanations__numberContainer
  height 50px
  width 50px

  margin-right 20px

.explanations__number
  width 50px
  height 50px

  float left

  border-radius 50%
  // background-color red
  border 2px solid $black

  display flex
  align-items center
  justify-content center

  font-family 'aileron'
  font-size 26px
  font-weight bold

  @media screen and (max-width: $tablet-landscape)
    width 40px
    height 40px
    font-size 18px

.explanations__explanation
  display flex
  align-items center
  transition opacity 300ms ease
  will-change transform
  position absolute
  bottom 30px
  left 20px
  right 20px
  opacity 0

  @media screen and (max-width: $tablet-landscape)
    display block
  

.explanations__sentence
  font-family 'aileron'
  // font-size 16px
  display block
  overflow hidden

  // @media screen and (min-width: $desktop-large)
  //   font-size 22px
  @media screen and (max-width: $tablet-landscape)
    font-size 14px