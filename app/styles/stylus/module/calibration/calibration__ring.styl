.calibration__ring 
  position absolute
  height h = 50px 
  width w = 50px
  margin-top -(h/2)
  margin-left -(w/2) 
  border 5px solid $blue
  border-radius 50%
  z-index 99
  opacity 0
  will-change opacity, transform

