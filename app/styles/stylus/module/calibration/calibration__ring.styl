.calibration__ring 
  position absolute
  height h = 30px 
  width w = 30px
  margin-top -(h/2)
  margin-left -(w/2) 
  border 5px solid $blue
  border-radius 50%
  // opacity 0 
  will-change opacity, transform

@keyframes calibrationApparition {
  0% {
    opacity 0
    transform scale(0)
  }
  75% {
    opacity 1
    transform scale(1.2)
  }
  100% {
    opacity 1
    transform scale(1)
  }
}

.calibration__ring1
  top 25%
  left 25%  
  animation calibrationApparition 0.6s ease backwards paused 

.calibration__ring2
  top 25%
  left 75%  
  animation calibrationApparition 0.6s ease 0.6s backwards paused 

.calibration__ring3
  top 75%
  left 25%  
  animation calibrationApparition 0.6s ease 1.2s backwards paused 

.calibration__ring4
  top 75%
  left 75%
  animation calibrationApparition 0.6s ease 1.8s backwards paused 
