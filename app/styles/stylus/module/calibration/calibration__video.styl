.calibration__video
    width 100%
    opacity 0
    display block

    transition opacity 1.2s ease 1s

.calibration__successTxt
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 0 20px
    font-family 'aileronBold'
    background rgba(84, 105, 254, 0.6)
    display flex
    justify-content center 
    align-items center 
    text-align center
    pointer-events none
    color $white
    opacity 0
    z-index 99
    will-change opacity 