$topBarGrey = #E9E9E9
$seperatorGrey = #D8D8D8

.dashboard__header
    height 60px
    width 100%
    padding-left 20px
    padding-right 20px
    background-color $topBarGrey
    display flex
    align-items center

    z-index  1

.dashboard__add
    height 40px
    width 9vw
    min-width 72px
    display flex
    flex-direction column
    justify-content center
    align-items center
    margin-right 20px

    background-color $black

    color $white
    font-family 'aileronBold'
    font-size 40px

    cursor pointer
    user-select none
    &:hover
        opacity 0.9

.dashboard__add > div
    margin-bottom 4px

.dashboard__controls
    height 40px
    width 9vw
    min-width 149px
    border-radius 4px
    // overflow hidden
    // box-shadow 0px 2px 10px 0px rgba(0, 0, 0, 0.06)
    display flex

.dashboard__reset
    height 100%
    width 50%
    min-width 74px
    display flex
    justify-content center
    align-items center

    box-shadow 0px 2px 10px 0px rgba(0, 0, 0, 0.06)

    background-color $topBarGrey

    cursor pointer
    &:active
        box-shadow 0px 2px 8px 0px rgba(0, 0, 0, 0.04)
        transform scale(0.96)
        z-index 1

.dashboard__resetSquare
    width 22px
    height 22px
    background-color $white

.dashboard__seperator
    width 1px
    height 100%
    background-color $seperatorGrey

    z-index 4

.dashboard__play
    width 50%
    min-width 74px
    height 100%
    display flex
    justify-content center
    align-items center

    box-shadow 0px 2px 10px 0px rgba(0, 0, 0, 0.06)

    background-color $topBarGrey

    cursor pointer
    &:active
        box-shadow 0px 2px 8px 0px rgba(0, 0, 0, 0.04)
        transform scale(0.96)
        z-index 2

.dashboard__playTriangle
    width 24px
    height 24px
    clip-path polygon(10% 0, 10% 100%, 90% 50%)
    background-color $white


