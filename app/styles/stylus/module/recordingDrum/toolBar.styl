.toolBar__timelineContainer
    height 34px
    width 100%
    display flex
    flex-direction column
    justify-content space-between

.toolBar
    width 100%
    height 80px
    padding 20px
    display flex

    border-radius 7px 7px 0px 0px

    background-color $black

    box-shadow 0px -10px 30px 0px rgba(0, 0, 0, 0.10)

.dashboard__record
    width 10px
    height 10px

    background-color $red

    border-radius 50%

.toolBar__metricsContainer
    height 9px
    width 100%

.toolBar__metric
    height 9px
    opacity 0.4

.toolBar__timeline
    height 20px
    width 100%

    background-color $green